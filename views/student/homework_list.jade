block content
    // page heading start
    .page-heading
        h3
            | 查看作业
        ul.breadcrumb
            li
                a(href='#') 作业

            li.active  查看作业
    // page heading end
    // body wrapper start
    .wrapper
        .row
            .col-sm-12
                section.panel
                    header.panel-heading
                        | 作业列表
                    .panel-body
                        .adv-table
                            table#dynamic-table.display.table.table-bordered.table-striped
                                //-var data=[{homework_id:'1',homework_title:'罚抄十遍',homework_start_time:'2017-01-01 ',homework_end_time:'2017-02-01',teacher_name:'林广艳'}];
                                thead
                                    tr
                                        th 标题
                                        th 开始时间
                                        th 截止时间
                                        th 状态
                                        th 发布人
                                        th 操作

                                tbody
                                    each item in data
                                        tr.gradeA
                                            td #{item.homework_title}
                                            td #{item.homework_start_time}
                                            td #{item.homework_end_time}
                                            td.center
                                            td #{item.teacher_name}
                                            td.center(style='width:100px;')
                                                -var edit='/student/homework_information?homework_id='+item.homework_id;
                                                button.btn.btn-success.btn-xs(type='button',onclick="window.location.href="+"'"+edit+"'",style='margin-right:10px',)
                                                    i.fa.fa-eye
                                                    |详情




    // body wrapper end

