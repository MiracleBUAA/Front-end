block styles

block scripts

    // spinner
    script(type='text/javascript', src='/js/fuelux/js/spinner.min.js')
    script(src='/js/spinner-init.js')


    script(src='/my_js/student/group_rate.js')




block content
    -var data={rate_list:[{student_id:'14211093',student_name:'胡晟',student_rate:'1.2'},{student_id:'14215555',student_name:'胡铮飞',student_rate:'0.8'}]};
    // page heading start
    .page-heading
        h3
            | 组内评分
        ul.breadcrumb
            li
                a(href='#') 团队

            li.active  组内评分
    // page heading end
    // body wrapper start
    .wrapper
        .row
            .col-sm-12
                section.panel
                    header.panel-heading
                        |成员列表
                    .panel-body
                        table.table.table-hover
                            thead
                                tr
                                    th 学号
                                    th 姓名
                                    th 成绩
                                    th 操作
                            tbody
                                each item in data.rate_list
                                    tr
                                        td #{item.student_id}
                                        td #{item.student_name}
                                        td #{item.student_rate}
                                        td
