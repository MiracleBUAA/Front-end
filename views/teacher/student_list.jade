block content
    // page heading start
    .page-heading
        h3
            | 学生名单
        ul.breadcrumb
            li
                a(href='#') 课程信息

            li.active  学生名单
    // page heading end
    // body wrapper start
    .wrapper
        .row
            .col-sm-12
                section.panel
                    header.panel-heading
                        | 名单
                        span.pull-right(style='margin-bottom: -50px')
                            form#upload_form.form-group(action='/teacher/student_list',method='post')
                                button#upload_button.btn.btn-default(type='submit', style='height: 25px;margin-right: 10px;padding-top: 2px; ')
                                    i.fa.fa-cloud-upload
                                    |  Upload
                                input#upload_file(name='file',type='file', style='float:right;width: 200px;')
                    .panel-body
                        .adv-table
                            table#dynamic-table.display.table.table-bordered.table-striped
                                -var students=[{id:'14211093',name:"胡晟",sex:"男",class_id:'142114'},{id:'14211091',name:"孙一峰",sex:"男",class_id:'F91'},{id:'14211092',name : "孙一峰他儿子",sex:"男",class_id:'F92'},{id:'14211094',name:"黄旭东",sex:"男",class_id:'142115'}];
                                thead
                                    tr
                                        th 学号
                                        th 姓名
                                        th 性别
                                        th 班级

                                tbody
                                    each item in students
                                        tr.gradeA
                                            td #{item.id}
                                            td #{item.name}
                                            td #{item.sex}
                                            td #{item.class_id}

                                tfoot
                                    tr
                                        th 学号
                                        th 姓名
                                        th 性别
                                        th 班级

    // body wrapper end

