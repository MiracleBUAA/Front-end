                a#course_name.editable.editable-click(href="#") #{data.course_name}
            tr
              td(width="30%") 开始时间
              td(width="30%")
                a#course_start_time.editable.editable-click(href='#') #{data.course_start_time}
            tr
              td(width="30%") 结束时间
              td(width="30%")
                a#course_end_time.editable.editable-click(href='#') #{data.course_end_time}
            tr
              td(width="30%") 学时
              td(width="30%")
                a#course_hours.editable.editable-click(href='#') #{data.course_hour}
            tr
              td(width="30%") 学分
              td(width="30%")
                a#credit.editable.editable-click(href='#') #{data.credit}
            tr
              td(width="30%") 上课地点
              td(width="30%")
                a#course_location.editable.editable-click(href='#') #{data.course_location}
            tr
              td(width="30%") 团队限制信息
              td(width="30%")
                a#team_limit_information.editable.editable-click(href='#') #{data.team_limit_information}
            tr
              td(width="30%") 教师信息
              td(width="30%")
                a#teacher_information.editable.editable-click(href='#') #{data.teacher_information}
            tr
              td(width="30%") 课程信息
              td(width="30%")
                a#course_information.editable.editable-click(href='#') #{data.course_information}

