block styles

block content
        .page-heading
          h3
            | 设置课程信息
            small 软件工程敏捷开发实践
          ul.breadcrumb
            li
              a(href='#') 课程信息
            li.active 设置课程信息

        //- var data={course_id:"1",course_name:"软件工程敏捷开发实践",course_start_time:"2017-06-25",course_end_time:"2017-07-05",course_hours:"20",credit:"2",course_location:"北航学院路工训中心317",team_limit_information:"6-8人，一个女生",teacher_information:"林广艳，贾经冬",course_information:"敏捷过程Scrum模型与教务系统开发"};
